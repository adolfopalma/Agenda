<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:id="@+id/imageView" />

    <TextView
        android:text="Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lNombre"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tfNombre" />

    <TextView
        android:text="Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lTelefono"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/tfTelefono"
            android:layout_weight="1"
            android:layout_width="300dp" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nuevoTelefono"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:text="Dirección"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lDireccion"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tfDireccion" />

    <TextView
        android:text="Dirección e-mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lEmail"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tfEmail" />

    <TextView
        android:text="Pagina web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lWeb"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tfWeb" />

    <TextView
        android:text="Foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tfFoto"
            android:layout_weight="1" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nuevaFoto"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:text="ALTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bAlta"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:onClick="alta" />

</LinearLayout>